{
  "name": "notification-microservice",
  "version": "1.0.0",
  "description": "Microservice de notifications par email pour ZenBilling avec gestion des templates et PDFs",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "ts:check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t notification-microservice .",
    "docker:run": "docker run -p 3002:3002 notification-microservice"
  },
  "author": "Hassan JERRAR",
  "license": "ISC",
