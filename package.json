    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "ioredis": "^5.6.0",
    "joi": "^17.13.3",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.13",
