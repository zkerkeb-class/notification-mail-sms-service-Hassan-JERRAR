    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^20.11.24",
    "@types/puppeteer": "^5.4.7",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.2.7",
    "bull": "^4.12.9",
